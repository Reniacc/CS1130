 <!DOCTYPE html>
<form>
             <label for="n1">Number 1</label><br>
             <input type="number" id="n1" name="fname"><br>
             <label for="n2">Number 2</label><br>
             <input type="number" id="n2" name="fname"><br>
             <button onclick="add2numbers()">Add!</button><br>
             <label for="sum">Sum: </label><br>
             <input type="number" id="sum" name="fname"><br>
             <a href ="index.html">Back to main</a>
             </form>


    <script>
    function add2numbers(){
        var n1, n2, sum;
        document.getElementById("n1").value * 1;
        document.getElementById("n2").value * 1;

        sum = n1+n2;
        document.getElementById("sum").value = sum;
    </script>
    }
